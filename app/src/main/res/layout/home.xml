<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD9D9"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="98dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/logo_description"
        android:gravity="center_horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:src="@drawable/logo_finanfacil" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="185dp"
        android:background="@drawable/rounded_bg"
        android:baselineAligned="true"
        android:foregroundTint="#D8D8D8"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Saldo"
                android:layout_width="284dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Saldo"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="82dp"
                android:layout_height="87dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="#FFFFFF"
                android:gravity="center_horizontal"
                android:src="@drawable/hist_rico" />

            <TextView
                android:id="@+id/Histórico"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="Histórico"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="85dp"
                android:layout_height="84dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center_horizontal"
                android:src="@drawable/Groupcategorias" />

            <TextView
                android:id="@+id/Categorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorias"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="80dp"
                android:layout_height="82dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center_horizontal"
                android:src="@drawable/adicionar" />

            <TextView
                android:id="@+id/Registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="84dp"
                android:layout_height="82dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center_horizontal"
                android:src="@drawable/dashboard" />

            <TextView
                android:id="@+id/Dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/Despesas"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="Despesas por categoria"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="191dp"
        android:background="@drawable/rounded_bg"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>

